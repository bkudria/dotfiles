[user]
    name = Benjamin Kudria
    email = ben@kudria.net

[core]
    editor = nano
    pager = less
    whitespace = trailing-space,space-before-tab,indent-with-non-tab

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto

[alias]
    push-all = "!for i in $(git config --list | grep -E ^remote\\..+\\.url | sed 's/^remote\\.\\(.*\\)\\.url=.*/\\1/'); do git push $i master; done"
    show-remotes = "!for i in $(git config --list | grep -E ^remote\\..+\\.url | sed 's/^remote\\.\\(.*\\)\\.url=.*/\\1/'); do echo $i; done"

    ci = commit
    checkin = commit

    co = checkout
    
    lc = log ORIG_HEAD.. --stat --no-merges
    llog = log --date=local
    gitkconflict = !gitk --left-right HEAD...MERGE_HEAD

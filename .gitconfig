[user]
	name = Benjamin Kudria
	email = ben@kudria.net

[github]
	user = bkudria

[core]
	editor = emacs-client-frame
	pager = less
	# change to tig when color.pager bug is fixed.

	whitespace = trailing-space,space-before-tab,cr-at-eol

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	pager = true

[alias]
	log = log --date=local
	
	push-all = "!for i in $(git config --list | grep -E ^remote\\..+\\.url | sed 's/^remote\\.\\(.*\\)\\.url=.*/\\1/'); do git push $i master; done"

	ci = commit
	checkin = commit

	co = checkout
	discard = checkout --

	switch = checkout

	create-branch = checkout -b
	delete-branch = branch -d

	branches = branch -a

	ls = ls-files

	select = add -p

	staged = diff --cached
	unstage = reset -q HEAD

	statistics = diff --stat

	ignore = !echo "$@" >> .gitignore

	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD

	s = svn
	supdate = svn rebase
	scommit = svn dcommit

	unstash = stash pop

    resolve = !git unstage

    echo = "!echo $1; echo $1"


[gui]
	fontdiff = -family terminus -size 13 -weight normal -slant roman -underline 0 -overstrike 0
[giggle]
	compact-mode = true
	main-window-maximized = true
	main-window-geometry = 0x0+0+0

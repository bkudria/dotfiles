	name = Benjamin Kudria
	email = ben@kudria.net

[github]
	user = bkudria

[core]
	editor = nano
	pager = less
	# change to tig when color.pager bug is fixed.

	whitespace = trailing-space,space-before-tab,indent-with-non-tab

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	pager = false

[alias]
	push-all = "!for i in $(git config --list | grep -E ^remote\\..+\\.url | sed 's/^remote\\.\\(.*\\)\\.url=.*/\\1/'); do git push $i master; done"

	ci = commit
	checkin = commit

	co = checkout

	ls = ls-files

	select = add -p

	staged = diff --cached

	statistics = diff --stat

	lc = log ORIG_HEAD.. --stat --no-merges
	llog = log --date=local
	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
	
[gui]
	fontdiff = -family \"courier new\" -size 19 -weight normal -slant roman -underline 0 -overstrike 0

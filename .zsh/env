#! /bin/zsh -f

HISTFILE=~/.zsh/histfile
HISTSIZE=1000
SAVEHIST=1000000

export RIPDIR=$HOME/.rip
export RUBYLIB=$RUBYLIB:$RIPDIR/active/lib

PATH=$PATH:/home/bkudria/bin:/usr/local/bin:/sbin:/usr/sbin:/usr/local/games:/var/lib/gems/1.9.1/bin:/usr/lib/kde4/bin:/usr/local/android/tools://usr/local/appengine/bin:/usr/local/jruby/bin:$RIPDIR/active/bin

OS=`uname`

[[ -e /etc/issue ]] && DISTRO=`cat /etc/issue.net | head -n 1 | awk '{print $1 }'`

KDEDIR="/usr"
QTDIR="/usr/share/qt3"
PKG_CONFIG_PATH="/usr/lib"
KDE_NO_IPV6=true
PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/X11R6/lib/pkgconfig.
GTK2_RC_FILES=$HOME/.gtkrc-2.0
XAUTHORITY=/home/bkudria/.Xauthority
VISUAL="emacs-client-frame"
EDITOR="emacs-client-frame"
GREP_COLOR="38;5;$HOSTCOLORCODE"
ACK_COLOR_MATCH="green"
ACK_COLOR_FILENAME="green"
GREP_OPTIONS="--color=auto"
CLICOLOR=1
PAGER=less
GPGKEY='209BE410'
DEBFULLNAME='Benjamin Kudria'
DEBEMAIL='ben@kudria.net'
[[ -x `qwhich gem` ]] && RUBYOPT='rubygems'

LESS="iRwm"
MOST_SWITCHES=""
CLASSPATH="$CLASSPATH:/usr/share/java/junit.jar:/usr/share/java/ant.jar"

# Colorized ls, with options
[[ -x `qwhich dircolors` ]] && eval `dircolors`
LS_COLORS="$LS_COLORS*.JPG=01;35:*.GIF=01;35:*.jpeg=01;35:*.pcx=01;35:*.png=01;35:*.pnm=01;35:*.bz2=01;31:*.mpg=01;38:*.mpeg=01;38:*.MPG=01;38:*.MPEG=01;38:*.m4v=01;038:*.mp4=01;038:*.swf=01;038:*.avi=01;38:*.AVI=01;38:*.wmv=01;38:*.WMV=01;38:*.asf=01;38:*.ASF=01;38:*.mov=01;38:*.MOV=01;38:*.mp3=01;39:*.ogg=01;39:*.MP3=01;39:*.Mp3=01;39"

ZLS_COLORS=$LS_COLORS

LS_OPTIONS="-p -l -h"

# Distro/OS specific setters
if [[ "$DISTRO" == "Debian" ]] || [[ "$DISTRO" == "Ubuntu" ]]; then
		RCDIR="/etc/init.d/"
fi

if [ "$OS" = "FreeBSD" ]; then
		LS_OPTIONS="$LS_OPTIONS -G"
		RCDIR="/usr/local/etc/rc.d/ /etc/rc.d/"
fi

if [[ "$OS" = "Linux" ]]; then
		LS_OPTIONS="$LS_OPTIONS --color=auto"
fi

fpath=(
		/home/bkudria/.zsh
		$fpath
		/home/bkudria/.zen/zsh/scripts
		/home/bkudria/.zen/zsh/zle )

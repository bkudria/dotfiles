#!/usr/bin/env bash

cd ~

url=http://github.com/bkudria/dotfiles/tarball/master

hostname=$1
if [ $hostname ]; then
	curl $url | ssh $hostname "tar --strip-components 1 -xzf-"
else
	curl $url | tar --strip-components 1 -xzf-
fi

# Homebrew

ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew tap homebrew/bundle
brew bundle --global
